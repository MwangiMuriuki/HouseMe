<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="190dp"
    android:layout_height="175dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:layout_margin="3dp">

    <LinearLayout
        android:id="@+id/cardLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/housePic"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:saveEnabled="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_for_sale"/>

            <TextView
                android:id="@+id/status"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="Rental"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"
                android:textAlignment="center"
                android:background="@drawable/rounded_corners_button_purple"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/housePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Ksh. 12,000"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/houseRegion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Nairobi"
                android:textColor="@color/textColorPrimary"
                android:textSize="14sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dimfivedp"
                android:visibility="gone"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="3dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ic_location"/>

            <TextView
                android:id="@+id/houseLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Kasarani, Opposite Naivas supermarket"
                android:textColor="@color/textColorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ic_bed"/>

            <TextView
                android:id="@+id/houseSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="2"
                android:textColor="@color/textColorSecondary"
                android:layout_marginStart="3dp"
                android:textSize="14sp"
                android:layout_gravity="center"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="3dp"
                android:background="@color/colorPrimaryDark" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ic_shower"/>

            <TextView
                android:id="@+id/houseBaths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="2"
                android:textColor="@color/textColorSecondary"
                android:layout_marginStart="3dp"
                android:textSize="15sp"
                android:layout_gravity="center"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="3dp"
                android:background="@color/colorPrimaryDark" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ic_parking"/>

            <TextView
                android:id="@+id/parking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="No"
                android:textColor="@color/textColorSecondary"
                android:layout_marginStart="3dp"
                android:textSize="15sp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>